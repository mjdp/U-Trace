    <!-- Header -->
    <div>
        <h2 class="header-primary">ADD NEW USER</h2>
        <span class="header-secondary">Add either LGUs, health authorities (of varying levels), or system admins to utilize the U-Trace administative system.</span>
    </div>

    {{#if success}}
    <div class="flex-container">
        <div class="flex-child">
            <div class="alert">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                A new user has been successfully created.
            </div>
        </div>
    </div>
    {{/if}}

    <!-- Body Actual -->
    <form id="newUserForm" method="POST" action="addNewUser">
        <div class="flex-container">
            <div class="flex-child">
                <label for="newName" class="form-label u-trace-green">Name:</label>
                <input type="text" class="form-control" id="newName" name="newName">
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
            <div class="flex-child">
                <label for="newEmail" class="form-label u-trace-green">Email:</label>
                <input type="email" class="form-control" id="newEmail" name="newEmail">
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
            <div class="flex-child">
                <label for="newType" class="form-label u-trace-green" >User Type:</label>
                <select class="form-select" aria-label="Default select example" id="newType" name="newType">
                    <option selected disabled value="">select type of user</option>
                    {{#each adminTypes}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
        </div>
        <div class="flex-container">
            <div class="flex-child">
                <label for="newPw" class="form-label u-trace-green">Password:</label>
                <input type="password" class="form-control" id="newPw" name="newPw">
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
            <div class="flex-child">
                <label for="newConfirmPw" class="form-label u-trace-green">Confirm Password:</label>
                <input type="password" class="form-control" id="newConfirmPw" name="newConfirmPw">
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
        </div>
        <div class="flex-container">
            <div class="flex-child">
                <label for="newRegion" class="form-label u-trace-green">Region:</label>
                <select class="form-select" aria-label="Default select example" id="newRegion" name="newRegion">
                    <option selected disabled value="">select a region</option>
                    {{#each regions}}
                        <option value = '{"code":"{{this.regid}}","name":"{{this.regname}}"}'>{{this.regname}}</option>
                    {{/each}}
                </select>
                
                {{!-- <input list="regions" name="newRegion" id="newRegion">

                <datalist id="regions">
                   <select class="form-select" aria-label="Default select example" id="newRegion" name="newRegion">
                    <option selected disabled value="">select a region</option>
                    {{#each regions}}
                        <option value = '{"code":"{{this.regid}}","name":"{{this.regname}}"}'>{{this.regname}}</option>
                    {{/each}}
                </select>
                </datalist> --}}
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
            <div class="flex-child">
                <label for="newProvince" class="form-label u-trace-green">Province:</label>
                <select class="form-select" aria-label="Default select example" id="newProvince" name="newProvince">
                    <option selected disabled value="">select a province</option>
                    <script id = "provincesTemplate" type = "text/x-handlebars-template">
                        {{#each provinces}}
                        <option value = "{{this.provinceId}}">{{this.provinceName}}</option>
                        {{/each}}
                    </script>
                </select>
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
        </div>
        <div class="flex-container">
            <div class="flex-child">
                <label for="newCity" class="form-label u-trace-green">City:</label>
                <select class="form-select" aria-label="Default select example" id="newCity" name="newCity">
                    <option selected disabled value="">select a city</option>
                    {{#each cities}}
                        <option value = "{{this.cityId}}">{{this.cityName}}</option>
                    {{/each}}
                </select>
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
            <div class="flex-child">
                <label for="newBarangay" class="form-label u-trace-green" >Barangay:</label>
                <select class="form-select" aria-label="Default select example" id="newBarangay" name="newBarangay">
                    <option selected disabled value="">select a barangay</option>
                </select>
                <div>
                    <i class="far fa-check-circle"></i>
                    <i class="far fa-times-circle"></i>
                    <small>message</small>
                </div>
            </div>
        </div>
        <button type ="submit" class="button"> <span>Create User</span> </button>
    </form>

