    <!-- Header -->
    <div>
        <h2 class="header-primary">USER VACCINATION INFORMATION</h2>
        <span class="header-secondary">This allows you to update the vaccination information of a specific user in your area.</span>
    </div>

    {{#if success}}
    <div class="flex-container">
        <div class="flex-child">
            <div class="alert">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                User's vaccine details has been updated.
            </div>
        </div>
    </div>
    {{/if}}
  
    <form id="vaxForm" method="POST" action="confirmVaxUpdate">

    <!-- Search (Front: TomSelect; Back: Algolia) -->
    <div class="flex-container">
        <div class="flex-child">
            <select id="userlist" name="userlist" placeholder="Select a person..." autocomplete="off">
	            <option value="" selected disabled>Select a person...</option>
                {{#each users}}
                <option value="{{this.objectID}}">{{this.firstname}} {{this.lastname}} ({{this.objectID}})</option>
                {{/each}}
	        </select>
        </div>
        <div class="flex-child" style="flex: 0.3;">
            <button id="editBtn" type="button" class="edit-button" disabled><span>Edit</span></button>
        </div>
        <div class="flex-child" style="flex: 0.5;">
            <button id="saveAsPDF" type="button" class="edit-button" style="width:12em;" disabled><span>Download As PDF</span></button>
        </div>
    </div>
    <div id="vaccineDiv">
        <div class="flex-container" style="margin-top:0.3em;"><div class="flex-childv2 dashboard-header">Vaccine Information</div></div> 

        <div class="flex-container">
            <div class="flex-child">
                <label for="vaxID" class="form-label u-trace-green">Vaccination ID:</label>
                <input type="text" class="form-control" id="vaxID" name="vaxID" disabled required>
            </div>

             <div class="flex-child">
                <label for="vaxFacility" class="form-label u-trace-green">Facility:</label>
                <input type="text" class="form-control" id="vaxFacility" name="vaxFacility" disabled required>
            </div>

        </div>

     
        
        <div class="flex-container">
            <div class="flex-child">
                <label for="vaxCategory" class="form-label u-trace-green">Category:</label>
                <select class="form-select" aria-label="Default select example" id="vaxCategory" name="vaxCategory" disabled required>
                    <option selected disabled value="">select a category</option>
                    {{#each categories}}
                        <option value = "{{this.categoryid}}">{{this.categoryname}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="flex-child">
                <label for="vaxBrand" class="form-label u-trace-green">Manufacturer:</label>
                <select class="form-select" aria-label="Default select example" id="vaxBrand" name="vaxBrand" disabled required>
                    <option selected disabled value="">select a brand</option>
                    {{#each vaccines}}
                        <option value = "{{this.vaccineid}}">{{this.vaccinename}}</option>
                    {{/each}}
                </select>
            </div>
        </div>      

        <div class="flex-container">
            <div class="flex-child">
                <label for="vax1stDose" class="form-label u-trace-green">First Dose:</label>
                <input type="date" class="form-control" id="vax1stDose" name="vax1stDose" disabled>
            </div>
            <div class="flex-child" style="flex:2;">
                <label for="batchno" class="form-label u-trace-green">Batch #:</label>
                <input type="text" class="form-control" id="batchno1stDose" name="batchno1stDose" disabled>
            </div>
            <div class="flex-child" style="flex:2;">
                <label for="lotno" class="form-label u-trace-green">Lot #:</label>
                <input type="text" class="form-control" id="lotno1stDose" name="lotno1stDose" disabled>
            </div>
            <div class="flex-child">
                <label for="vaccinator" class="form-label u-trace-green">Vaccinator:</label>
                <input type="text" class="form-control" id="vaccinator1stDose" name="vaccinator1stDose" disabled>
            </div>
        </div>
        <div class="flex-container">
            <div class="flex-child">
                <label for="vax2ndDose" class="form-label u-trace-green">Second Dose:</label>
                <input type="date" class="form-control" id="vax2ndDose" name="vax2ndDose" disabled>
            </div>
            <div class="flex-child" style="flex:2;">
                <label for="batchno" class="form-label u-trace-green">Batch #:</label>
                <input type="text" class="form-control" id="batchno2ndDose" name="batchno2ndDose" disabled>
            </div>
            <div class="flex-child" style="flex:2;">
                <label for="lotno" class="form-label u-trace-green">Lot #:</label>
                <input type="text" class="form-control" id="lotno2ndDose" name="lotno2ndDose" disabled>
            </div>
            <div class="flex-child">
                <label for="vaccinator" class="form-label u-trace-green">Vaccinator:</label>
                <input type="text" class="form-control" id="vaccinator2ndDose" name="vaccinator2ndDose" disabled>
            </div>
        </div>
        
        <div class="flex-container"><div class="flex-childv2 dashboard-header">Booster Shots</div></div> 

        <div id="boosterDiv">

        </div>

        <div class="flex-container" style="margin-bottom:2em;">
            <div class="flex-child">
                <button id="addBoosterBtn" type="button" class="button" disabled> <span>Add Booster Field</span> </button>
            </div>
            <div class="flex-child" style="flex: 12">
                <button id="vaxBtn" type="submit" class="button" disabled> <span>Add / Update Vaccine Information</span> </button>
            </div>
        </div>

        <input type="hidden" id="boosterCtr" name="boosterCtr" value="0">
    </form>

